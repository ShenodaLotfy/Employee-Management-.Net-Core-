@model EditUserViewModel


@{
    ViewBag.Title = "Edit User";
}

<h1>Edit User</h1>
<form method="post" asp-action="EditUser" asp-controller="administration" class="mt-3">
    <input asp-for="Id" hidden />
    <div class="form-group row text-center">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row text-center">
        <label asp-for="Username" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Username"  class="form-control" />
        </div>
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group row text-center">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email"  class="form-control" />
        </div>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group row text-center">
        <label asp-for="City" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="City"  class="form-control" />
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row offset-2">
        <button type="submit"  class="btn btn-primary m-1">Update</button>
        <a asp-action="listusers" asp-controller="administration" asp-route-userId ="@Model.Id" class="m-1 btn btn-primary">Cancel</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>User Roles</h2>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                @foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">There's no roles at the moment!</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserRoles" asp-controller="administration"
              asp-route-userId="@Model.Id" class="btn btn-primary">Manage Roles</a>
        </div>
    </div>

    <hr />
    <div class="card">
        <div class="card-header">
            <h2> User Claims </h2>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                @foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">@claim</h5>
                }
            }
            else
            {
                <h5 class="card-title">There's no claims at the moment!</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserClaims" asp-controller="administration" 
               asp-route-userId="@Model.Id" class="btn btn-primary">Manage Claims</a>
        </div>
    </div>

</form>


