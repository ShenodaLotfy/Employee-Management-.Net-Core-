@model UserClaimsVewModel

@{
   
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>Add or Remove claims from the user.</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input hidden asp-for="@Model.Claims[i].ClaimType" />
                    <input class="form-check-input" asp-for="@Model.Claims[i].isSelected" />
                    <label class="form-check-label" asp-for="@Model.Claims[i].isSelected">@Model.Claims[i].ClaimType</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditUser" asp-controller="administration" asp-route-userId="@Model.UserId" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>